<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name, nil, placeholder: @placeholder_fullName) %>

  <%= label_tag(:student_id, "Student ID") %>
  <%= text_field_tag(:student_id, nil, placeholder: @placeholder_studentID) %>

  <%= label_tag(:major, "Major") %>
  <%= text_field_tag(:major, nil, placeholder: @placeholder_major) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>